<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PantallaTareas" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PantallaTareas" parent="Base.Theme.PantallaTareas" />

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:textColorPrimary">@color/colorTextPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorTextSecondaryDark</item>
    </style>

    <!--Letras Modo Claro -->

    <style name="Base.Theme.PantallaTareas.FuentePequena">
        <item name="android:textSize">@dimen/tamano_letra_pequena</item>
    </style>

    <style name="Base.Theme.PantallaTareas.FuenteMediana">
        <item name="android:textSize">@dimen/tamano_letra_mediana</item>
    </style>

    <style name="Base.Theme.PantallaTareas.FuenteGrande">
        <item name="android:textSize">@dimen/tamano_letra_grande</item>
    </style>

    <!--Letras Modo Oscuro-->

    <style name="AppTheme.Dark.FuentePequena">
        <item name="android:textSize">@dimen/tamano_letra_pequena</item>
    </style>

    <style name="AppTheme.Dark.FuenteMediana">
        <item name="android:textSize">@dimen/tamano_letra_mediana</item>
    </style>

    <style name="AppTheme.Dark.FuenteGrande">
        <item name="android:textSize">@dimen/tamano_letra_grande</item>
