<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtVTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="4dp"
        android:text="AÃ±adir Tarea"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/contenedorFragmentos"
        android:layout_width="366dp"
        android:layout_height="152dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVTarea"
        app:layout_constraintVertical_bias="0.0">

    </LinearLayout>

    <fragment
        android:id="@+id/primer_fragment"
        android:name="com.example.pantallatareas.fragmentos.FragmentoUno"
        android:layout_width="889dp"
        android:layout_height="345dp"
        android:layout_weight="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVTarea"
        tools:layout_editor_absoluteX="-79dp"
        tools:ignore="MissingConstraints"></fragment>

    <fragment
        android:id="@+id/segundo_fragment"
        android:name="com.example.pantallatareas.fragmentos.FragmentoDos"
        android:layout_width="826dp"
        android:layout_height="314dp"
        android:layout_weight="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/primer_fragment"
        tools:layout_editor_absoluteX="-34dp"
        tools:ignore="MissingConstraints"></fragment>

    <fragment
        android:id="@+id/tercer_fragmento"
        android:name="com.example.pantallatareas.fragmentos.FragmentoDos"
        android:layout_width="826dp"
        android:layout_height="314dp"
        android:layout_weight="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hola"
        tools:layout_editor_absoluteX="-34dp"
        tools:ignore="MissingConstraints"></fragment>

</androidx.constraintlayout.widget.ConstraintLayout>